
{% extends 'base.html.twig' %}

{% block body %}
    <div class="my-4"><h1>Tous les posts</h1></div>
    <div class="row">
        {% for post in posts %}
            <div class="d-flex flex-column justify-content-center align-items-center mb-3">
                <div class="card h-100 col-6"  style="min-height: 150px;">


                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">

                        </div>
                        <p class="card-text">{{ post.content }}</p>

                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <small class="text-muted mt-3 d-flex flex-column">


                            <div class="mb-2">


                            </div>



                        </small>
                        <div class="d-flex justify-content-center align-items-center">
                            <a href="{{ path("app_show",{id:post.id}) }}" class="btn btn-primary mt-3"><i class="bi bi-caret-right-fill"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>




{% endblock %}
